{
  "name": "rose-pine",
  "displayName": "Rosé Pine",
  "description": "All natural pine, faux fur and a bit of soho vibes for the classy minimalist.",
  "version": "0.3.25",
  "publisher": "mvllow",
  "license": "MIT",
  "icon": "assets/icon.png",
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "scripts": {
    "build": "npx @mvllow/pinecone@beta",
    "version": "auto-changelog -p --ignore-commit-pattern ci: && git add changelog.md",
    "husky:pre-commit": "npm run build && pretty-quick",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run husky:pre-commit"
    }
  },
  "galleryBanner": {
    "color": "#191724",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rose-pine/vscode"
  },
  "keywords": [
    "theme",
    "dark theme",
    "light theme",
    "rose pine",
    "rose moonlit",
    "rose dawn",
    "minimal",
    "pastel",
    "classy",
    "subtle",
    "soft"
  ],
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Rosé Pine",
        "uiTheme": "vs-dark",
        "path": "./themes/rp-color-theme.json"
      },
      {
        "label": "Rosé Pine Moon",
        "uiTheme": "vs-dark",
        "path": "./themes/rp-moon-color-theme.json"
      },
      {
        "label": "Rosé Pine Dawn",
        "uiTheme": "vs",
        "path": "./themes/rp-dawn-color-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "Rosé Pine Icons",
        "label": "Rosé Pine Icons",
        "path": "./themes/rp-icon-theme.json"
      }
    ]
  },
  "devDependencies": {
    "auto-changelog": "^2.2.1",
    "husky": "^5.0.6",
    "pinst": "^2.1.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  }
}
